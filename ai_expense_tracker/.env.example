# Server Configuration
PORT=3000
NODE_ENV=development

# CORS Configuration
CORS_ORIGINS=http://localhost:3000,http://localhost:4200

# Telegram Bot Configuration
TELEGRAM_BOT_TOKEN=your_telegram_bot_token_here

# MongoDB Configuration
MONGODB_URI=mongodb://localhost:27017/ai_expense_tracker

# OpenAI Configuration
OPENAI_API_KEY=your_openai_api_key_here

# JWT Configuration
JWT_SECRET=your_jwt_secret_here
JWT_EXPIRATION=7d

# Rate Limiting
THROTTLE_TTL=60000
THROTTLE_LIMIT=60

# Security
AUTHORIZED_TELEGRAM_ADMINS=123456789,987654321

# Bot Implementation Flag
# Set to 'true' to use GramIO implementation, 'false' to use original node-telegram-bot-api
USE_GRAMIO=false 